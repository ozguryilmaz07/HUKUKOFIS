@model IEnumerable<OpenLawOffice.Web.ViewModels.Opportunities.OpportunityStageViewModel>

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Opportunity Stages";
    ViewBag.PageTitle = "Opportunity Stages";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/Settings">Settings</a></li>
        <li><a href="/OpportunityStages" class="active">Opportunity Stages</a></li>
    </ul>
}

<script type="text/javascript">
    $(function () {
        $("#new").click(function () {
            window.location = '/OpportunityStages/Create';
        })
    })
</script>

<div class="container-fluid">
    <div class="row text-right">
        <div class="btn-group">
            <button id="new" class="btn btn-sm btn-primary">
                <span class="fa fa-plus"></span> Create
            </button>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        Opportunity Stages
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-hover table-text-small">
            <thead>
                <tr>
                    <th>
                        Order
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @item.Order
                        </td>
                        <td>
                            @(Html.ActionLink(item.Title, "Details", new { id = item.Id }))
                        </td>
                        <td class="text-right">
                            <button type="button" class="btn btn-xs btn-default" onclick="navTo('/OpportunityStages/Edit/@(item.Id.Value)')">
                                <span class="fa fa-pencil"></span> Edit
                            </button>
                            <button type="button" class="btn btn-xs btn-default" onclick="navTo('/OpportunityStages/Delete/@(item.Id.Value)')">
                                <span class="fa fa-times"></span> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>