@model OpenLawOffice.Web.ViewModels.Opportunities.OpportunityStageViewModel

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Create Opportunity Stage";
    ViewBag.PageTitle = "Create Opportunity Stage";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/Settings">Settings</a></li>
        <li><a href="/OpportunityStages">Opportunity Stages</a></li>
        <li><a href="/OpportunityStages/Create" class="active">Create</a></li>
    </ul>
}

@using (Html.BeginForm("Create", "OpportunityStages", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @(Html.ValidationSummary(true))
    <div class="panel panel-default">
        <div class="panel-heading">Opportunity Stages Information</div>
        <div class="panel-body">
            <div class="form-group">
                <span class="control-label col-sm-2">Title<span class="required-field" title="Required Field">*</span></span>
                <div class="col-sm-10" style="padding-top: 7px;">
                    @(Html.TextBoxFor(m => m.Title, new { @class = "form-control" }))
                </div>
            </div>
            <div class="form-group">
                <span class="control-label col-sm-2">Order<span class="required-field" title="Required Field">*</span></span>
                <div class="col-sm-10" style="padding-top: 7px;">
                    @(Html.TextBoxFor(m => m.Order, new { @class = "form-control" }))
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    </div>
}