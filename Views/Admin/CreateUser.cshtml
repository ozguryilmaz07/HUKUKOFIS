@model OpenLawOffice.Web.ViewModels.Account.RegisterViewModel

@{ 
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Create User Account";
    ViewBag.PageTitle = "Create User Account";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/Settings">Settings</a></li>
        <li><a href="/Admin">Administration</a></li>
        <li><a href="/Admin/CreateUser" class="active">Create User</a></li>
    </ul>
}

@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    <div class="panel panel-default">
        <div class="panel-heading">Account Information</div>
        <div class="panel-body">
            <div class="form-group">
                <span class="control-label col-sm-2">Username</span>
                <div class="col-sm-10" style="padding-top: 7px;">
                    @(Html.TextBoxFor(m => m.UserName, new { @class = "form-control" }))
                </div>
            </div>
            <div class="form-group">
                <span class="control-label col-sm-2">Email</span>
                <div class="col-sm-10" style="padding-top: 7px;">
                    @(Html.TextBoxFor(m => m.Email, new { @class = "form-control" }))
                </div>
            </div>
            <div class="form-group">
                <span class="control-label col-sm-2">Password</span>
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                        @(Html.PasswordFor(m => m.Password, new { @class = "form-control" }))
                    </div>
                </div>
            </div>
            <div class="form-group">
                <span class="control-label col-sm-2">Confirm Password</span>
                <div class="col-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                        @(Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" }))
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    </div>
}