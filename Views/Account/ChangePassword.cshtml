@model OpenLawOffice.Web.ViewModels.Account.ChangePasswordViewModel
    
@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Change Password";
    ViewBag.PageTitle = "Change Password";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/Account">My Account</a></li>
        <li><a href="/Account/ChangePassword" class="active">Change Password</a></li>
    </ul>
}

<div class="panel panel-default">
    <div class="panel-heading">Account Information</div>
    <div class="panel-body">
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
        @(Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again."))
        <div class="form-group">
            @(Html.LabelFor(x => x.OldPassword, new { @class = "control-label col-sm-2" }))
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                    @(Html.PasswordFor(m => m.OldPassword, new { value = Model.OldPassword, @class = "form-control" }))
                </div>
            </div>
        </div>
        <div class="form-group">
            @(Html.LabelFor(x => x.NewPassword, new { @class = "control-label col-sm-2" }))
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                    @(Html.PasswordFor(m => m.NewPassword, new { value = Model.NewPassword, @class = "form-control" }))
                </div>
            </div>
        </div>
        <div class="form-group">
            @(Html.LabelFor(x => x.ConfirmPassword, new { @class = "control-label col-sm-2" }))
            <div class="col-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-key fa-fw"></span></span>
                    @(Html.PasswordFor(m => m.ConfirmPassword, new { value = Model.ConfirmPassword, @class = "form-control" }))
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
}        
    </div>
</div>