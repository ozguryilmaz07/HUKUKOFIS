@model OpenLawOffice.Web.ViewModels.Timing.TimeCategoryViewModel

@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";
    ViewBag.Title = "Delete Time Category";
    ViewBag.PageTitle = "Delete Time Category";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a href="/Settings">Settings</a></li>
        <li><a href="/TimeCategories">Time Categories</a></li>
        <li>Court Type: <a href="/TimeCategories/Details/@(Model.Id)">@(Model.Title)</a></li>
        <li><a href="/TimeCategories/Delete/@(Model.Id)" class="active">Delete</a></li>
    </ul>
}

@using (Html.BeginForm("Delete", "TimeCategories", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @(Html.ValidationSummary(true))
    <h3>
        Are you sure you want to disable this?
    </h3>

    <div class="panel panel-default">
        <div class="panel-heading">Time Category Information</div>
        <div class="panel-body">
            <div class="form-group">
                <span class="control-label col-sm-2">Title<span class="required-field" title="Required Field">*</span></span>
                <div class="col-sm-10" style="padding-top: 7px;">
                    @(Model.Title)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
    </div>
}